{
  "name": "xagent",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "start": "ts-node --project tsconfig.node.json src/server.ts",
    "start:agent": "ts-node --project tsconfig.node.json src/agent.ts",
    "dev:all": "concurrently \"pnpm:start\" \"pnpm:start:agent\"",
    "build": "cross-env SKIP_GEMINI_CHECK=1 DRY_RUN=1 next build",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "pretest": "node -e \"require('fs').mkdirSync('.tmp',{ recursive: true })\"",
    "test": "cross-env TMPDIR=.tmp jest --config config/jest.config.js --ci --runInBand",
    "clean": "rimraf .next dist .turbo .cache coverage .tmp tsconfig.tsbuildinfo || true",
    "format:check": "prettier --check AGENTS.md README.md README.recon.md .github/pull_request_template.md .github/ISSUE_TEMPLATE/bug_report.md .github/ISSUE_TEMPLATE/feature_request.md",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "mcp:use:local": "bash scripts/setup/mcp_use.sh local",
    "mcp:use:docker": "bash scripts/setup/mcp_use.sh docker",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@tailwindcss/postcss": "^4.1.13",
    "chart.js": "^4.5.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "lucide-react": "^0.544.0",
    "next": "^15.5.3",
    "playwright": "^1.55.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^30.1.2",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.36.0",
    "eslint-config-next": "15.5.3",
    "husky": "^9.1.6",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.13",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad"
}
