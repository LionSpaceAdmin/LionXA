{
  "$schema": "https://modelcontextprotocol.dev/schemas/servers.json",
  "mcpServers": {
    "filesystem": {
      "command": "bash",
      "args": ["-lc", "set -a; [ -f .env ] && . ./.env; node ./node_modules/@modelcontextprotocol/server-filesystem/dist/index.js"],
      "env": { "ROOT": "." }
    },
    "fetch": {
      "command": "bash",
      "args": ["-lc", "set -a; [ -f .env ] && . ./.env; node ./node_modules/@modelcontextprotocol/server-fetch/dist/index.js"]
    },
    "shell": {
      "command": "bash",
      "args": ["-lc", "set -a; [ -f .env ] && . ./.env; ALLOW_UNSAFE=0 node ./node_modules/@modelcontextprotocol/server-shell/dist/index.js"]
    }
  }
}
