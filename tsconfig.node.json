{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "outDir": "./dist",
    "target": "ES2017",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "allowImportingTsExtensions": false
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/app/**/*", ".next"]
}