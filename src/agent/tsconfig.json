{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../../dist/agent",
    // Expand the rootDir to the parent `src` so the agent project can import
    // shared modules under `src/ai` and `src/lib` during compilation.
    "rootDir": "..",
    // Resolve the `@/*` path alias used across the repo.
    "baseUrl": "..",
    "paths": {
      "@/*": ["../src/*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules"]
}
